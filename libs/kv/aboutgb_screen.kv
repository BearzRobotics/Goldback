#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex

<AboutGBScreen>
    orientation: "vertical"

    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        md_bg_color: gch("#FFD700")
        spacing: dp(10)
        padding: [dp(25), 0, dp(25), dp(25)]

    MDBoxLayout:
        canvas.before:
            Color:
                rgba: root.theme_cls.bg_normal
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [dp(20), dp(20), 0, 0]

        ScrollView:

            MDList:

                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(15)

                    MDLabel:
                        text: "Explore flights by destinations"
                        font_style: "Subtitle2"
                        theme_text_color: "Hint"
                        adaptive_height: True

                